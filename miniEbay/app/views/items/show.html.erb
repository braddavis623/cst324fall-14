<p>
  <strong>Title:</strong>
  <%= @item.title %>
</p>
 
<p>
  <strong>Description:</strong>
  <%= @item.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @item.price %>
</p>

<h2>Reviews</h2>
<% @item.reviews.each do |r| %>
  <p>
    <strong>Rating:</strong>
    <%= r.rating %>
  </p>
 
  <p>
    <strong>Review:</strong>
    <%= r.review %>
  </p>
<% end %>

<h2>Add review:</h2>
<%= form_for([@item, @item.reviews.build]) do |f| %>
  <p>
    <%= f.label :rating %><br>
    <%= f.text_field :rating %>
  </p>
  <p>
    <%= f.label :review %><br>
    <%= f.text_area :review %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to 'Back', items_path %>
| <%= link_to 'Edit', edit_item_path(@item) %>
| <%= link_to 'Home', controller: 'welcome' %>