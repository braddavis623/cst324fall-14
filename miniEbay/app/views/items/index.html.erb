<h1>Item listings</h1>
 
<table>
  <tr>
    <th>__________Title__________</th>
    <th>______________Description_______________</th>
    <th>__Price__</th>
  </tr>
 
  <% @items.each do |item| %>
    <tr>
      <td><%= item.title %></td>
      <td><%= item.description %></td>
      <td><%= item.price %></td>
      <td><%= link_to 'View | ', item_path(item) %></td>
      <td><%= link_to 'Edit | ', edit_item_path(item) %></td>
      <td><%= link_to 'Remove', item_path(item),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

